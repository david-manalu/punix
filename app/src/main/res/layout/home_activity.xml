<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Daily Promo Section -->
    <TextView
        android:id="@+id/daily_promo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daily_promo"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/daily_promo_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/daily_promo_image"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/daily_promo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_50_off_on_all_pizzas_today"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/daily_promo_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_now"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#8FBC8F"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <!-- Main Page Section -->
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_punix"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/main_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/we_offer_the_best_pizza_in_town_order_now_and_taste_the_difference"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/browse_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/browse"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#8FBC8F"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/main_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/main_about_us_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/punix_has_been_serving_the_community_for_over_20_years_our_secret_recipe_and_dedication_to_quality_have_made_us_the_best_pizza_place_in_town_we_use_only_the_freshest_ingredients_and_our_pizza_is_baked_to_perfection_come_visit_us_today_and_taste_the_difference_for_yourself"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/main_contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_us"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/main_contact_us_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/punix_pizza_n123_main_st_ncity_state_12345_nphone_123_456_7890"
        android:textColor="#666666"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>