<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Order Complete Text -->
    <TextView
        android:id="@+id/order_complete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Complete!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <!-- Order Summary -->
    <TextView
        android:id="@+id/order_summary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Summary:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <!-- Order Items -->
    <LinearLayout
        android:id="@+id/order_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <!-- Order Item 1 -->
        <LinearLayout
            android:id="@+id/order_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_1_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nasi Goreng"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/order_item_1_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:textSize="18sp"
                android:textColor="#333333"/>

        </LinearLayout>

        <!-- Order Item 2 -->
        <LinearLayout
            android:id="@+id/order_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_item_2_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ayam Bakar"
                android:textSize="18sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/order_item_2_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 35.000"
                android:textSize="18sp"
                android:textColor="#333333"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Total Price -->
    <TextView
        android:id="@+id/order_total_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: Rp 60.000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <!-- Estimated Arrival Time -->
    <TextView
        android:id="@+id/estimated_arrival_time_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estimated Arrival Time: 30 minutes"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Order Complete Image -->
    <ImageView
        android:id="@+id/order_complete_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_check_circle_outline_24"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>