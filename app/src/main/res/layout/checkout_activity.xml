<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Checkout Items Section -->
    <TextView
        android:id="@+id/checkout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Order"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/checkout_items_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </ScrollView>

    <!-- Checkout Summary Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/checkout_subtotal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/checkout_subtotal_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp. 60.000"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/checkout_tax_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax (6%):"
            android:textColor="#333333"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/checkout_tax_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rp. 3.600"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/checkout_total_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/checkout_total_value"
            android:layout_width ="0dp"
            android:layout_height="wrap_content"
            android:text="Rp. 63.000"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="end"/>

    </LinearLayout>

    <!-- Checkout Button Section -->
    <Button
        android:id="@+id/checkout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F6B400"
        android:text="Checkout"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>